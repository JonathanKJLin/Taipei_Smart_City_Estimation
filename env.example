# Django Settings
SECRET_KEY=django-insecure-change-this-in-production-1234567890abcdef
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///db.sqlite3

# Media and Static Files
MEDIA_ROOT=data/uploads
STATIC_ROOT=static

# Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_API_KEY=your-azure-document-intelligence-api-key-here

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Celery Configuration (Optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# File Upload Settings
MAX_PDF_SIZE=52428800  # 50MB in bytes
ALLOWED_PDF_EXTENSIONS=.pdf

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Security (Production)
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# OpenAI Model Configuration
OPENAI_MODEL_NAME=gpt-5
OPENAI_MAX_TOKENS=16000
OPENAI_USE_RESPONSES=true
OPENAI_USE_COMPLETION_TOKENS=true

